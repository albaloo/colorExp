<!DOCTYPE html>
<html >
  <head>
    <meta charset="UTF-8">
    <title>HTML Tutorial Login</title>
  </head>

  <body>
  	<div class="wrapper">
  		<div class="login">
    <p class="title">Welcome!</p>
     <%= form_tag sessions_path do %>
      <div class="field">
      <%= label_tag :email %><br>
      <%= text_field_tag :email %>
      </div>
      <div class="field">
      <%= label_tag :password %><br>
      <%= password_field_tag :password %>
      </div>
      <div class="actions">
      <%= submit_tag "Log In" %>
       <% end %> 
      </div>
     </div>
    </div>
  </body>
</html>

